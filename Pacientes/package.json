{
  "name": "gigi-hospital",
  "author": "Alejandro Pastor",
  "version": "1.0.0",
  "description": "Esqueleto de aplicaciÃ³n Electron con JavaScript",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "rebuild": "electron-rebuild",
    "version:patch": "npm version patch",
    "version:minor": "npm version minor",
    "version:major": "npm version major",
    "build": "npm run version:patch && cmd /c \"echo Cerrando instancias abiertas... & taskkill /IM 'Hospital App.exe' /F >nul 2>&1 & echo Ejecutando postinstall... & npm run postinstall & echo Ejecutando dist... & npm run dist\"",
    "dist": "electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "devDependencies": {
    "electron": "^30.5.1",
    "electron-builder": "^26.0.12",
    "electron-rebuild": "^3.2.9",
    "electron-reloader": "^1.2.3"
  },
  "dependencies": {
    "@joeattardi/emoji-button": "^4.6.4",
    "better-sqlite3": "^12.2.0",
    "choices.js": "^11.1.0",
    "emoji-button": "^2.2.2",
    "emoji-picker-element": "^1.26.3"
  },
  "build": {
    "appId": "alejandro.hospitalapp",
  "productName": "Gigi Hospital",
    "icon": "assets/app.ico",
    "win": {
      "target": "nsis",
      "artifactName": "Hospital App.${ext}"
    },
    "directories": {
      "output": "dist"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Hospital App",
      "uninstallDisplayName": "Uninstall Hospital App"
    }
  }
}
